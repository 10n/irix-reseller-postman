	"item": [
		{
			"name": "Autentication",
			"item": [
				{
					"name": "GetToken with ClientCredentials",
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "{{clientSecret}}",
									"type": "string"
								},
								{
									"key": "username",
									"value": "{{clientId}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "client_credentials",
									"type": "text"
								},
								{
									"key": "scope",
									"value": "{{scopes}}",
									"description": "See collection/environment variables",
									"type": "text"
								},
								{
									"key": "scope",
									"value": "read:resellerCredit read:mapping",
									"type": "text",
									"disabled": true
								}
							]
						},
						"url": {
							"raw": "{{tokeUrl}}",
							"host": [
								"{{tokeUrl}}"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Mapping Api (sample)",
			"item": [
				{
					"name": "Countries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/mapping/v1/countries",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"mapping",
								"v1",
								"countries"
							]
						}
					},
					"response": []
				}
			]
		},
		{
